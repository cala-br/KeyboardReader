<Page
    x:Class="KeyboardReader.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KeyboardReader.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--#region Background-->
    <Page.Background>
        <AcrylicBrush 
            TintColor="{ThemeResource SystemAltHighColor}"
            FallbackColor="{ThemeResource SystemChromeAltMediumHighColor}"
            BackgroundSource="HostBackdrop"
            TintOpacity="0.6"
            TintTransitionDuration="0:0:0.3"/>
    </Page.Background>
    <!--#endregion-->

    <Grid>

        <!--#region Custom title bar-->
        <Grid x:ConnectionId='2' 
            x:Name="customTitleBar" 
            VerticalAlignment="Top"
            Height="32">

            <Image 
                Source="ms-appx:///Assets/Square44x44Logo.scale-100.png" 
                HorizontalAlignment="Left" 
                Width="20" 
                Height="20" 
                Margin="8,0,0,0"/>
            
            <TextBlock 
                Text="Keyboard Reader" 
                VerticalAlignment="Center"
                Style="{StaticResource CaptionTextBlockStyle}" 
                Margin="36,0"/>
        </Grid>
        <!--#endregion-->

        <!--#region Navigation view-->
        <NavigationView x:ConnectionId='3' 
            x:Name="navView"
            PaneDisplayMode="Top"
            Margin="0, 32,0,0">

            <!--#region Menu items-->
            <NavigationView.MenuItems>
            
                <!--#region Keyboard connection-->
                <NavigationViewItem
                    Content="Tastiera"
                    Icon="Keyboard"
                    Tag="keyboard#connection"/>
                <!--#endregion-->
            
                <!--#region Exercises-->
                <NavigationViewItem 
                    Content="Didattica"
                    Tag="exercises">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE82D;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <!--#endregion-->
            
            </NavigationView.MenuItems>
            <!--#endregion-->
        
            <!--#region Content frame-->
            <Frame x:ConnectionId='4' x:Name="contentFrame">
                <Frame.ContentTransitions>
                    <TransitionCollection>
                        <EntranceThemeTransition/>
                    </TransitionCollection>
                </Frame.ContentTransitions>
            </Frame>
            <!--#endregion-->
        
        </NavigationView>
        <!--#endregion-->
        
        <!--#region Reveal border-->
        <Rectangle 
            Height="40"
            Margin="-1, 32"
            VerticalAlignment="Top"
            Stroke="{ThemeResource SystemControlTransparentRevealListLowBorderBrush}"/>
        <!--#endregion-->
        
    </Grid>
</Page>

